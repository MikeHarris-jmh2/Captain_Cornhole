<div class="col-lg-8">
  <h2><%= @product.name %></h2>
  <p><%= image_tag @product.photo.url(:medium) %></p>
  <h4><%= @product.description %></h4>
  <h4>$<%= @product.price %></h4>

  <% if current_user == nil %>
  <% elsif @product.user_id == current_user.id %>
    <%= link_to 'Edit', edit_product_path(@product) %>
    <%= link_to 'Delete', product_path(@product), :data => { :method => "delete"} %>
    <% end %>
</div>
