<div class="container">
  <% if @products.any? %>
    <% @products.each do |product| %>
            <div class="col-md-4">
              <ul class= "list-unstyled">
                <li id= "cornhole">
                  <%= link_to product.name, product_path(product) %>
                  <p id="image"><%= link_to image_tag(product.photo.url(:medium)), product_path(product) %></p>
                  <p>$<%= link_to product.price, product_path(product) %></p>
                </li>
              </ul>
            </div>
        <% end %>
      <% end %>
    </div>
